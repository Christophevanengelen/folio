---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Badge from '../../components/ui/Badge.astro';

const projects = [
  {
    slug: 'wejustice',
    title: 'WeJustice',
    tagline: 'Plateforme LegalTech · De 0 à la V1 en solo',
    description: 'Strategy, product, design et développement front-end — une plateforme qui rend le droit accessible.',
    role: 'CXO & Partner',
    year: '2024',
    tags: ['LegalTech', 'B2B SaaS', '0→1', 'Full Ownership'],
    featured: true
  },
  {
    slug: 'project-2',
    title: 'Projet 2',
    tagline: 'Design System & Ops',
    description: 'Structuration et scaling d\'un design system pour une équipe de 15 designers.',
    role: 'Design Lead',
    year: '2023',
    tags: ['Design System', 'Design Ops'],
    featured: false
  },
  {
    slug: 'project-3',
    title: 'Projet 3',
    tagline: 'Transformation digitale',
    description: 'Accompagnement stratégique et delivery d\'une refonte produit.',
    role: 'Product Strategist',
    year: '2023',
    tags: ['Strategy', 'Product'],
    featured: false
  }
];
---

<BaseLayout
  title="Work"
  description="Projets sélectionnés — des cas concrets qui illustrent mon approche de la stratégie à l'exécution."
>
  <section class="py-[var(--space-section)]">
    <div class="mx-auto max-w-[var(--space-container)] px-[var(--space-gutter)]">
      <!-- Header -->
      <div class="max-w-2xl mb-16">
        <h1 class="text-[length:var(--text-h1)] font-semibold text-ink mb-4">
          Work
        </h1>
        <p class="text-lg text-mist">
          Une sélection de projets qui illustrent mon approche — de la stratégie à l'exécution,
          en passant par le design et la livraison.
        </p>
      </div>

      <!-- Projects list -->
      <div class="space-y-6">
        {projects.map(project => (
          <a
            href={`/work/${project.slug}`}
            class="group block bg-white rounded-xl p-6 md:p-8 shadow-sm hover:shadow-md transition-all duration-normal border border-transparent hover:border-accent/20"
          >
            <div class="flex flex-col md:flex-row md:items-center gap-6">
              <!-- Image placeholder -->
              <div class="w-full md:w-48 h-32 bg-gradient-to-br from-cloud to-silver/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <span class="text-silver text-sm">Image</span>
              </div>

              <!-- Content -->
              <div class="flex-1">
                <div class="flex flex-wrap items-center gap-3 mb-2">
                  <h2 class="text-xl font-semibold text-ink group-hover:text-accent transition-colors">
                    {project.title}
                  </h2>
                  {project.featured && (
                    <Badge variant="accent">Flagship</Badge>
                  )}
                </div>

                <p class="text-accent font-medium text-sm mb-2">
                  {project.tagline}
                </p>

                <p class="text-mist text-sm mb-4">
                  {project.description}
                </p>

                <div class="flex flex-wrap items-center gap-4 text-sm">
                  <span class="text-slate">{project.role}</span>
                  <span class="text-silver">·</span>
                  <span class="text-silver">{project.year}</span>
                  <span class="text-silver">·</span>
                  <div class="flex flex-wrap gap-2">
                    {project.tags.slice(0, 3).map(tag => (
                      <Badge variant="muted">{tag}</Badge>
                    ))}
                  </div>
                </div>
              </div>

              <!-- Arrow -->
              <svg class="w-5 h-5 text-mist group-hover:text-accent group-hover:translate-x-1 transition-all flex-shrink-0 hidden md:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
