---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
---

<BaseLayout title="Page non trouvée">
  <section class="py-[var(--space-section)] flex items-center justify-center min-h-[60vh]">
    <div class="text-center px-[var(--space-gutter)]">
      <p class="text-6xl md:text-8xl font-semibold text-accent mb-4">404</p>
      <h1 class="text-2xl md:text-3xl font-semibold text-ink mb-4">
        Page non trouvée
      </h1>
      <p class="text-mist mb-8 max-w-md mx-auto">
        Cette page n'existe pas ou a été déplacée. Pas de panique, ça arrive même aux meilleurs.
      </p>
      <Button href="/" variant="primary">
        Retour à l'accueil
      </Button>
    </div>
  </section>
</BaseLayout>
